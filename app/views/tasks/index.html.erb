<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed %>
    <li><i class="far fa-check-square"></i> <%= link_to task.title, task_path(task) %> - <%= link_to "Delete", delete_task_path(task) %></li>
  <% else %>
    <li><i class="far fa-square"></i> <%= link_to task.title, task_path(task) %> - <%= link_to "Delete", delete_task_path(task) %></li>
  <% end %>
<% end %>

<%= link_to "+ Add a new task", tasks_new_path %>
<br>
<%= link_to "Back to list", tasks_path %>
