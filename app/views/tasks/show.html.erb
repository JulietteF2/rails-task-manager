<h2><%= @task.title %></h2>
<br>

<p><%= @task.details %></p>

<% if @task.completed %>
  <li><i class="far fa-check-square"></i> This task is completed</li>
<% else %>
  <li><i class="far fa-square"></i> This task is not completed</li>
<% end %>
<br>

<%= link_to "Edit task", edit_task_path(@task)  %>
<%= link_to "Back to list", tasks_path %>
